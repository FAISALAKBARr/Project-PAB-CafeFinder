<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Disable windowActionBar and use Toolbar instead -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Navy_light</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/sailor_blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Logo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">410dp</item>
        <item name="android:layout_marginTop">150dp</item>
        <item name="android:src">@drawable/baseline_black_album_24</item>
    </style>

    <!--STYLE-->
    <style name="LayoutMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LayoutWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LayoutMatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewHome">
        <item name="android:layout_width">325dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CircleImageViewProfile">
        <item name="android:layout_width">325dp</item>
        <item name="android:layout_height">235dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="RoundedCornersImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item> <!-- Adjust the size as needed -->
    </style>



</resources>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CafeDetailActivity">

    <!-- ImageView placed outside the ScrollView -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_item_photo"
        style="@style/CircleImageViewDetail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        card_view:civ_border_color="@color/black"
        card_view:civ_border_width="1dp"
        tools:src="@tools:sample/avatars" />

    <!-- ScrollView containing other elements -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/img_item_photo"
        app:layout_constraintBottom_toTopOf="@id/Play">

        <LinearLayout
            style="@style/LayoutMatchWrap"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_song_name"
                style="@style/LayoutMatchWrap"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:gravity="center"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_song_description"
                style="@style/LayoutMatchWrap"
                android:layout_margin="16dp"
                android:layout_gravity="center"
                android:justificationMode="inter_word"
                android:textSize="16sp"
                android:textStyle="italic" />
            <Button
                android:id="@+id/back_button"
                style="@style/LayoutWrapContent"
                android:onClick="gotoMain"
                android:text="@string/goto_back"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </LinearLayout>
    </ScrollView>

    <!-- Back button -->
    <Button
        android:id="@+id/Play"
        style="@style/BackButton"
        android:text="@string/play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="playSong"/>

</androidx.constraintlayout.widget.ConstraintLayout>

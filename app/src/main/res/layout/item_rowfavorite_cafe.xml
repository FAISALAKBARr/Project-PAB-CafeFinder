<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:outlineAmbientShadowColor="@color/Beige">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_item_photo"
            android:layout_width="220dp"
            android:layout_height="190dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/RoundedSquare"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintVertical_bias="0.0"
            tools:src="@tools:sample/avatars" />

        <Button
            android:id="@+id/locationButton"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="Lihat Lokasi"
            android:textAllCaps="false"
            android:textColor="@color/Navy"
            android:textStyle="bold"
            android:textSize="12sp"
            android:background="@drawable/transparent_bg_bordered_button"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/img_item_photo"
            card_view:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/cafeButton"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:background="@drawable/transparent_bg_bordered_button"
            android:text="Lihat Cafe"
            android:textAllCaps="false"
            android:textColor="@color/Navy"
            android:textSize="12sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/img_item_photo"
            card_view:layout_constraintTop_toBottomOf="@+id/locationButton" />

        <Button
            android:id="@+id/shareButton"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:background="@drawable/transparent_bg_bordered_button"
            android:text="Bagikan"
            android:textAllCaps="false"
            android:textColor="@color/Navy"
            android:textSize="12sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/img_item_photo"
            card_view:layout_constraintTop_toBottomOf="@+id/cafeButton" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:background="@drawable/transparent_bg_bordered_button"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/img_item_photo"
            card_view:layout_constraintTop_toBottomOf="@+id/shareButton" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/transparencyShape"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:background="@drawable/transparencybg"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedSquare"
            card_view:layout_constraintBottom_toBottomOf="@+id/deleteButton"
            card_view:layout_constraintEnd_toEndOf="@+id/img_item_photo"
            card_view:layout_constraintHorizontal_bias="1.0"
            card_view:layout_constraintStart_toStartOf="@+id/img_item_photo"
            card_view:layout_constraintTop_toBottomOf="@+id/shareButton"
            card_view:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
